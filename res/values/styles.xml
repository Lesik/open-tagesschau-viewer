<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Widget" />
    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />
    <style name="Widget.Light" />
    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />
    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- Card styles -->
    
	<style name="card_text">
		<item name="android:textColor">@color/card_text_color</item>
	</style>

	<style name="card_text_small" parent="@style/card_text">
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="card_text_separator" parent="@android:style/Widget.TextView">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
	</style>
	
	<style name="card_text_large" parent="@style/card_text">
		<item name="android:textSize">20sp</item>
	</style>
    
	<style name="card_text_title" parent="@style/card_text_large">
		<item name="android:padding">16.0dip</item>
		<item name="android:layout_marginRight">20dp</item>
	</style>
    
	<style name="card_button">
        <item name="android:textSize">@dimen/card_action_text</item>
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/background_card_button</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:drawablePadding">4.0dip</item>
	</style>
	
		<style name="card_button_threedot">
        <item name="android:gravity">end|top|center</item>
        <item name="android:background">@null</item>
        <item name="android:maxWidth">2.0dp</item>
        <item name="android:maxHeight">2.0dp</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:src">@drawable/ic_button_threedot</item>
        <!--item name="android:layoutDirection">locale</item-->
    </style>
	
</resources>